---
import { Image } from "astro:assets"
import menu from "../assets/images/menu.png"
import {hero} from "../assets/data/data.json"
---

<header class="header">
    <div class="header__container">
        <div class="header__logo">
            <a href="/">Joel Ccasane</a>
        </div>
        <div class="header__menu">
            <button id="menu-toggle">
                <Image src={menu} alt="Menu icon"/>
            </button>
            <div class="header__nav">
                <div class="menu">
                    <a href="#experience">Experience</a>
                    <a href="#education">Education</a>
                    <a href="#skills">Skills</a>
                    <a href={hero.email}>Contact</a>
                </div>
            </div>
        </div>
        
        <nav class="nav__links">
            <a class="nav__link" href="#experience" aria-label="Experience">Experience</a>
            <a class="nav__link" href="#education" aria-label="Education">Education</a>
            <a class="nav__link" href="#skills" aria-label="Contact">Skills</a>
            <a class="nav__link" href={hero.email} aria-label="Contact">Contact</a>
        </nav>
    </div>
</header>

<style>
.header {
    position: sticky;
    top: 0;
    z-index: 18;
}

.header__container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 3.125rem;
    background-color: var(--clr-primary-900);
}

.header__menu {
    position: relative;
    display: none;
}

.header__nav {
    position: fixed;
    max-width: 300px;
    top: 0px;
    right: -2px;
    bottom: 0;
    height: 100%;
    width: 0;
    overflow: hidden;
    z-index: 1;
    border-left: 4px solid ;
    background: var(--clr-primary-white);
    transition: width 0.3s ease-in-out;
}

.menu {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 1.8rem;
}

.menu a {
    font-size: 1.375rem;
    font-weight: 600;  
    text-decoration: none;
    color: var(--clr-primary-800);
}

.header__menu button {
    width: 50px;
    height: 50px;
    cursor: pointer;
    border: none;
    background-color: transparent;
}

.header__logo a {
    font-size: 1.5rem;
    font-weight: 600;  
    text-decoration: none;
    color: var(--clr-primary-white);
}

.nav__links {
    display: flex;
    gap: 1.5rem;
}

.nav__link {
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    color: var(--clr-primary-white);
}

.nav__link:hover {
    text-decoration: underline;
    text-decoration-thickness: 2px;
}

@media (max-width: 767px) {
    .header__container {
        padding: 0.75rem 1.875rem;
    }
    
    .header__menu {
        display: initial;
    }

    .nav__links {
        display: none;
    }

    .header__nav:target {
        width: 250px;
        z-index: 99;
    }

    .header__nav {
        width: 0;
    }

    #menu-toggle:focus ~ .header__nav {
        width: 250px;
        z-index: 99;
    }
}
</style>
